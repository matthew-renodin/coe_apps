###############################################################################
# liblockvka - Kconfig
#
#
###############################################################################

config LIB_LOCKVKA
    bool "liblockvka"
    depends on HAVE_LIB_SEL4 && HAVE_LIBC
    select HAVE_SEL4_LIBS
    default y
    help
        A library to wrap unsafe vka with a lock to ensure thread safety.
